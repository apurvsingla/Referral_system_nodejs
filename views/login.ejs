<link rel="stylesheet" href="/css/login.css">
<script>
    $(window).resize(function() {
        if ($(window).width() < 510) {
            $(".loginBtn--facebook").text("Facebook");
        } else {
            $(".loginBtn--facebook").text("Login with Facebook");
        }
    });
    $(window).resize(function() {
        if ($(window).width() < 510) {
            $(".loginBtn--google").text("Google");
        } else {
            $(".loginBtn--google").text("Login with Google");
        }
    });
</script>
<body>
    <div id="outer-box">
        <div class="box-form">
            <div class="text-center-form">
                <div id="form-heading">
                    <h1>
                        Reward Programme
                    </h1>

                    <p>
                        A place to share knowledge and better understand the world
                    </p>
                </div>

                <div id="form">

                    <div id="left-portion-form">
                        <a href="#">
                            <button class="loginBtn pb loginBtn--facebook">
                            Login with Facebook
                          </button>
                        </a><br>
                        <a href="#">
                            <button class="loginBtn pb loginBtn--google space">
                            Login with Google
                          </button>
                        </a>
                        <p>
                            <a href="#">
                        Sign Up With Email.
                    </a> By signing up you indicate that you have read and agree to R/P
                            <a href="#">Terms of Service</a> and
                            <a href="#">Privacy Policy.</a>
                        </p>
                    </div>



                    <form action="/users/create-session" method="post" id="right-portion-form">
                        <label for="email" id="label" class="pb"> 
                            Login
                            </label>
                        <input class="pb" placeholder="Email" type="email" name="email" id="email">
                        <input class="pb" placeholder="password" type="password" name="password" id="pwd">
                        <a href="#" class="pb">Forgot Password?</a>
                        <button>Login</button>
                    </form>


                </div>
            </div>
        </div>
</body>


<script>
    window.fbAsyncInit = function() {
        FB.init({
            appId: '{your-app-id}',
            cookie: true,
            xfbml: true,
            version: '{api-version}'
        });

        FB.AppEvents.logPageView();

    };

    (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {
            return;
        }
        js = d.createElement(s);
        js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));


    
</script>