<form method="POST" action="/users/register/<%= user.userRefferalCode %>">
    <p>SignUp</p>
    <div class="form-group">
      <label for="password">New Password</label>
      <input class="form-control" type="password" name="password" value="" placeholder="New password" autofocus="autofocus"/>
    </div>
    <div class="form-group">
      <label for="confirm">Confirm Password</label>
      <input class="form-control" type="password" name="confirmPassword" value="" placeholder="Confirm password"/>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Update Password</button>
    </div>
  </form>